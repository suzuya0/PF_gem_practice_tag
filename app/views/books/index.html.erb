<h1>Books#index</h1>

<%= form_with model: @book, local:true do |f| %>
  <%= f.label :title, "書籍名" %>
  <%= f.text_field :title %>
  <%= f.label :content, "内容" %>
  <%= f.text_field :content %>
  <%= f.label :tag_list, "タグ" %>
  <%= f.text_field :tag_list,value: @book.tag_list.join(',') %>
  <%= f.submit %>
<% end %>

<% @books.each do |book| %>
  <h4><%= book.title %></h4>
  <%= book.content %>
  <br>
  <% book.tag_list.each do |tag| %>
  <%= link_to tag, books_path(tag_name: tag), class:"text-white" %>
  <% end %>
  <%= link_to "詳細", book_path(book) %> 
  <%= link_to "編集", edit_book_path(book.id) %>
<% end %>
